<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <!-- Appenders -->
  <Appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{1} - %msg %n"/>
    </Console>
  </Appenders>
  <!-- Loggers -->
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>